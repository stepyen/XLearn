<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stepyen.xlearn">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--录音-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>


    <!--    监听短信权限-->
    <uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
    <uses-permission android:name="android.permission.READ_SMS"></uses-permission>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity">

        </activity>

        <activity android:name=".base.BaseActivity"></activity>
        <activity android:name=".fragment.utils.life_cycle.ActivityLifeActivity"></activity>

        <!--launch-->
        <activity android:name=".fragment.utils.launch.AActivity">
        </activity>
        <activity
            android:name=".fragment.utils.launch.BActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity android:name=".fragment.utils.launch.CActivity"></activity>
        <activity android:name=".fragment.UMengActivity"></activity>

        <activity android:name=".fragment.basics.activity.TargetActivity"></activity>
        <activity android:name=".fragment.basics.eventDispatch.dispatch.EventDispatchActivity"></activity>

        <activity-alias
            android:name=".fragment.basics.activity.AliasActivity"
            android:targetActivity=".fragment.basics.activity.TargetActivity"></activity-alias>


        <!--arouter-->
        <activity android:name=".fragment.utils.arouter.ARouterTestSimpleActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestNeedLoginActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestParaActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestLoginActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestServiceActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterSchameFilterActivity">
            <intent-filter>
                <data
                    android:host="m.aliyun.com"
                    android:scheme="arouter"/>
            </intent-filter>
        </activity>

        <activity android:name=".fragment.utils.AgentWeb.AgentWebActivity"></activity>


        <activity android:name=".fragment.basics.version.PermissionActivity"></activity>


        <service
            android:name=".fragment.basics.process_communication.MessengerService"
            android:process=":testMessenger"
            ></service>


        <provider
            android:authorities="com.stepyen.StudentContentProvider"
            android:name=".fragment.basics.content_provider.StudentContentProvider"
            android:exported="true"
            ></provider>

        <!--***************************友盟***********************************-->

        <!--新浪 开始-->
        <activity
            android:name="com.umeng.socialize.media.WBShareCallBackActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >
        </activity>
        <activity
            android:name="com.sina.weibo.sdk.web.WeiboSdkWebActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            >

        </activity>
        <activity
            android:name="com.sina.weibo.sdk.share.WbShareTransActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <!--新浪 结束-->

        <!--微信 结束-->
        <activity
            android:name="com.xfwy.wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <!--微信 结束-->

        <!--QQ 开始-->    <!--qq（请注意将友盟的qq appkey替换成您自己的qq appkey）-->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="tencent100424468"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <!--QQ 结束-->

        <!--receiver-->
        <receiver android:name=".fragment.basics.receiver.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>