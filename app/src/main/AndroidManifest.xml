<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stepyen.xlearn">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity">
        </activity>

        <activity android:name=".base.BaseActivity"></activity>
        <activity android:name=".fragment.utils.life_cycle.ActivityLifeActivity"></activity>

        <!--launch-->
        <activity android:name=".fragment.utils.launch.AActivity">
        </activity>
        <activity
            android:name=".fragment.utils.launch.BActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity android:name=".fragment.utils.launch.CActivity"></activity>

        <activity android:name=".fragment.basics.activity.TargetActivity"></activity>
        <activity-alias
            android:name=".fragment.basics.activity.AliasActivity"
            android:targetActivity=".fragment.basics.activity.TargetActivity"></activity-alias>
        
        
<!--arouter-->
        <activity android:name=".fragment.utils.arouter.ARouterTestSimpleActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestNeedLoginActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestParaActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestLoginActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterTestServiceActivity"></activity>
        <activity android:name=".fragment.utils.arouter.ARouterSchameFilterActivity">
            <intent-filter>
                <data
                    android:host="m.aliyun.com"
                    android:scheme="arouter"/>
            </intent-filter>
        </activity>

<!--receiver-->
        <receiver android:name=".fragment.basics.receiver.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>