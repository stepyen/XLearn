<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--无Title-->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>


        <item name="xui_config_size_content_text">@dimen/xui_config_size_content_text</item>

        <item name="xui_config_size_explain_text">@dimen/xui_config_size_explain_text</item>
        <item name="xui_config_color_explain_text">@color/xui_config_color_explain_text</item>

        <item name="xui_config_color_title_text">@color/xui_config_color_title_text</item>
        <item name="xui_config_size_title_text">@dimen/xui_config_size_title_text</item>

        <item name="xui_config_content_spacing_horizontal">7.5dp</item>

        <item name="CustomStyleViewStyle">@style/CustomStyle</item>
    </style>

    <style name="CustomStyle">
        <item name="csv_title">这个是标题</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Explain">
        <item name="android:textSize">?attr/xui_config_size_explain_text</item>
        <item name="android:textColor">?attr/xui_config_color_explain_text</item>
    </style>
    <style name="TextStyle.Title">
        <item name="android:textSize">?attr/xui_config_size_title_text</item>
        <item name="android:textColor">?attr/xui_config_color_title_text</item>
    </style>


    <!--<item name="tabBackground">?attr/selectableItemBackground</item>-->

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_content_text</item>
    </style>

    <style name="TabText.Explain">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_explain_text</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">

        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/xui_gray_6</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/xui_config_main_theme</item>
        <item name="tabIndicatorColor">@color/xui_config_main_theme</item>
    </style>





</resources>
