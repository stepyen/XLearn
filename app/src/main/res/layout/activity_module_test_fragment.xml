<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TextView_hint_tag"
                android:text="静态添加fragment"
                />

           <fragment
               android:id="@+id/staticFragment"
               android:name="com.stepyen.xlearn.activity.module.fragment.StaticFragment"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               />
            <TextView
                style="@style/TextView_hint_tag"
                android:text="动态添加fragment"
                />

            <Button
                android:id="@+id/showABtn"
                style="@style/CommonButton"
                android:text="展示 A "
                />

            <Button
                android:id="@+id/showBBtn"
                style="@style/CommonButton"
                android:text="展示 B "
                />

            <FrameLayout
                android:id="@+id/fragmentContentFl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>